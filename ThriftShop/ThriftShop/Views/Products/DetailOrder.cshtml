@using ThriftShop.Models;
@using System;
@using System.Collections.Generic;
@using System.Linq;
@using System.Web;
@using System.Web.Mvc;
@using PagedList;
@using ThriftShop.Models;
@model List<Chi_tiet_don_hang>
@{
    ViewBag.Title = "DetailOrder";
    Layout = "~/Views/Layout/AdminLayoutcshtml.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="top-title row">
            <div>
                <h5 class="card-title">Detail Order</h5>
            </div>
            <span style="padding-left:1500px; font:30px"><i class="fa-solid fa-circle-plus"></i></span>
        </div>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">ProductName</th>
                        <th scope="col">Image</th>
                        <th scope="col">Size</th>
                        <th scope="col">Numbers</th>
                        <th scope="col">Price</th>
                        <th scope="col">Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.id_sp</th>
                            <td>@item.ten_sp</td>
                            <td>
                                @{
                                    SneakerThriffEntities db = new SneakerThriffEntities();
                                    var image = db.San_pham.SingleOrDefault(x => x.id_sp == item.id_sp);
                                    var brand = "";
                                    if (image.id_hangsx == 1)
                                    {
                                        brand = "Nike/";
                                    }
                                    else if (image.id_hangsx == 2)
                                    {
                                        brand = "Adidas/";
                                    }
                                    else if (image.id_hangsx == 3)
                                    {
                                        brand = "Converse/";
                                    }
                                    else
                                    {
                                        brand = "NEW BALANCE/";
                                    }
                                }
                                <img style="width:50px;height:50px" src="~/Content/anh/productList/@brand/@item.anh_sp/big_image.jpeg" />
                            </td>
                            <td>39</td>
                            <td>@item.so_luong</td>
                            <td>@item.don_gia</td>
                            <td>@item.thanh_tien</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
