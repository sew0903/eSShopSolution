@using ThriftShop.Models;
@model Don_hang
@{
    Layout = "~/Views/Layout/AdminLayoutcshtml.cshtml";
}
@using (Html.BeginForm())
{
    <div style="padding-left:30%" class="container-fluid">

        <div class="row mt-3">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">delete Product</div>
                        <hr>
                        <form>
                            <div class="form-group">
                                <label for="input-1">Id </label>
                                <input value="@Model.id_don_hang" type="text" class="form-control" name="u_name" id="u_name" placeholder="Tên sản phẩm">
                            </div>
                            <div class="form-group">
                                <label for="input-2">Tình trạng</label>
                                <input value="@Model.tinh_trang" type="text" class="form-control" name="u_color" id="u_color" placeholder="Màu">
                            </div>
                            <div style="padding-top:10px" class="form-group">
                                <button type="submit" class="btn btn-light px-5"> Xóa</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div><!--End Row-->
        <!--start overlay-->
        <div class="overlay toggle-menu"></div>
        <!--end overlay-->

    </div>
}