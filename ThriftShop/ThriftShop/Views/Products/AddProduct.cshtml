@using System.Web.Mvc;
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Layout/AdminLayoutcshtml.cshtml";
}

@using (Html.BeginForm())
{
    <div style="padding-left:30%" class="container-fluid">

        <div class="row mt-3">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">Add Product</div>
                        <hr>
                        <form>
                            <div class="form-group">
                                <label for="input-1">Name</label>
                                <input type="text" class="form-control" name="name" id="name" placeholder="Tên sản phẩm">
                            </div>
                            <div class="form-group">
                                <label for="input-2">Color</label>
                                <input type="text" class="form-control" name="color" id="color" placeholder="Màu">
                            </div>
                            <div class="form-group">
                                <label for="input-3">ImportDate</label>
                                <input type="date" class="form-control" id="importdate" name="importdate" placeholder="Ngày nhập(vd: 10/29/2021)">
                            </div>
                            <div class="form-group">
                                <label for="input-4">Brand</label><br />
                                <select id="brand" name="brand" style="border: 0px solid #e5eaef;; color: #fff !important; background-color: rgba(255, 255, 255, 0.2); width: 100%; height: 40px ">
                                    <option id="option_hsx">Nike</option>
                                    <option id="option_hsx">Adidas</option>
                                    <option id="option_hsx">Converse</option>
                                    <option id="option_hsx">New Balance</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="input-5">Size</label>
                                <input type="number" class="form-control" id="size" name="size" placeholder="Size">
                            </div>
                            <div class="form-group">
                                <label for="input-6">Describe</label>
                                <input type="text" class="form-control" id="describe" name="describe" placeholder="Mô tả">
                            </div>
                            <div class="form-group">
                                <label for="input-6">Image</label>
                                <input name="image" id="image" class="form-control" type="file">
                            </div>
                            @ViewBag.ThongBao
                            <div style="padding-top:10px" class="form-group">
                                <button id="add_submit" type="submit" class="btn btn-light px-5"><i class="fa-solid fa-plus"></i> Add</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div><!--End Row-->
        <!--start overlay-->
        <div class="overlay toggle-menu"></div>
        <!--end overlay-->

    </div>
}

@{
    if (ViewBag.flag == 1)
    {
        <script type="text/javascript">
            window.alert("Thêm sản phẩm không thành công!!");
        </script>
    }

}

