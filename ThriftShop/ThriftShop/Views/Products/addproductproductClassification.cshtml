
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Layout/AdminLayoutcshtml.cshtml";
}

<div style="padding-left:30%" class="container-fluid">

    <div class="row mt-3">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">Add</div>
                    <hr>
                    <form>
                        <div class="form-group">
                            <label for="input-1">Id</label>
                            <input type="text" class="form-control" id="input-1" placeholder="Id loại sản phẩm">
                        </div>
                        <div class="form-group">
                            <label for="input-2">Name</label>
                            <input type="text" class="form-control" id="input-2" placeholder="Tên loại sản phẩm">
                        </div>
                        <div class="form-group">
                            <label for="input-3">Describe</label>
                            <input type="text" class="form-control" id="input-3" placeholder="Mô tả">
                        </div>
                        <div style="padding-top:10px" class="form-group">
                            <button type="submit" class="btn btn-light px-5"><i class="fa-solid fa-plus"></i> Add</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div><!--End Row-->
    <!--start overlay-->
    <div class="overlay toggle-menu"></div>
    <!--end overlay-->

</div>

