@using ThriftShop.Models;
@model PagedList.IPagedList<Nguoi_dung>
@using PagedList.Mvc;
@{
    ViewBag.Title = "userManagement";
    Layout = "~/Views/Layout/AdminLayoutcshtml.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="top-title row">
            <div>
                <h5 class="card-title">Basic Table</h5>
            </div>
            <span style="padding-left:1500px; font:30px"><i class="fa-solid fa-circle-plus"></i></span>
        </div>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Username</th>
                        <th scope="col">CustomerName</th>
                        <th scope="col">DayOfBirth</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Address</th>
                        <th scope="col">Email</th>
                        <th scope="col">IdJurisdiction</th>
                        <th scope="col">Del</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <th scope="row">@item.id_user</th>
                        <td>@item.tai_khoan</td>
                        <td>@item.ho_ten</td>
                        <td>@item.ngay_sinh</td>
                        <td>@item.so_dien_thoai</td>
                        <td>@item.dia_chi</td>
                        <td>@item.email</td>
                        <td>@item.id_quyen</td>
                        <td><a href="@Url.Action("deleteUser","UserManagerment",new {@id=item.id_user})"><span><i class="fa-solid fa-trash-can"></i></span></a></td>
                    </tr>
                    }
                </tbody>
            </table>
            <!-- Thêm mã phân trang -->
            <br />
            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

            @Html.PagedListPager(Model, page => Url.Action("Index",
                new { page }))
            <!-- Kết thúc -->
        </div>
    </div>
</div>
<!-- jQuery -->
<script src="~/CSS/Admin/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="~/CSS/Admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- DataTables  & Plugins -->
