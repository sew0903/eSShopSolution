@using System;
@using System.Collections.Generic;
@using System.Linq;
@using System.Web;
@using System.Web.Mvc;
@using PagedList;
@using ThriftShop.Models;
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Layout/AdminLayoutcshtml.cshtml";
}

@using (Html.BeginForm())
{
    <div style="padding-left:30%" class="container-fluid">

        <div class="row mt-3">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">Add Voucher</div>
                        <hr>
                        <form>
                            <div class="form-group">
                                <label for="input-1">Id_User</label>
                                <select id="id_user" name="id_user" class="form-control">
                                    @{
                                        SneakerThriffEntities db = new SneakerThriffEntities();
                                        var lstUser = db.Nguoi_dung.ToList();
                                    }
                                    @foreach (var item in lstUser)
                                    {
                                        <option>@item.id_user - @item.ho_ten </option>
                                    }
                                </select>
                            </div>
                            @*<div class="form-group">
                                <label for="input-2">Code</label>
                                <input type="text" class="form-control" name="code" id="code" placeholder="Giffcode">
                            </div>*@
                            <div class="form-group">
                                <label for="input-3">EXPIRY</label>
                                <input type="date" class="form-control" name="expiry" id="expiry" placeholder="Hạn sử dụng">
                            </div>
                            <div class="form-group">
                                <label for="input-4">SaleOff</label>
                                <input type="text" class="form-control" name="phantram" id="phantram" placeholder="Phần trăm giảm giá">
                            </div>
                            <div style="padding-top:10px" class="form-group">
                                <button type="submit" class="btn btn-light px-5"><i class="fa-solid fa-plus"></i> Add</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div><!--End Row-->
        <!--start overlay-->
        <div class="overlay toggle-menu"></div>
        <!--end overlay-->

    </div>
}

