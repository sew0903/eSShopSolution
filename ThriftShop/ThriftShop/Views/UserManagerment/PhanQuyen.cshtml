@using ThriftShop.Models;
@model List<Phan_quyen>
@{
    ViewBag.Title = "DetailOrder";
    Layout = "~/Views/Layout/AdminLayoutcshtml.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="top-title row">
            <div>
                <h5 class="card-title">Basic Table</h5>
            </div>
            <span style="padding-left:1500px; font:30px"><i class="fa-solid fa-circle-plus"></i></span>
        </div>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Describe</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.id_quyen</th>
                            <td>@item.ten_quyen</td>
                            <td>@item.mo_ta</td>
                        </tr>
                    }
                    <td><i class="fa-solid fa-plus"></i></td>
                </tbody>
            </table>
        </div>
    </div>
</div>
